<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splashscreen"
    android:background="#251543">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="218dp"
        android:layout_marginTop="256dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/applicationname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.675"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo">
    </ImageView>
    <TextView
        android:id="@+id/applicationname"
        android:layout_width="190dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif"
        android:text="PROJECT HUB"
        android:textColor="#F9F6FA"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.574"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="338dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:text="The Biggest Project Is Yourself"
        android:textAlignment="center"
        android:textColor="#FCFCFD"
        android:textSize="18sp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.657"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/applicationname"/>
</androidx.constraintlayout.widget.ConstraintLayout>